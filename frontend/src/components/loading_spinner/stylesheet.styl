@import '~src/vars'

@keyframes spinner
  to
    transform: rotate(360deg)

.root
  position: relative
  width: 100%
  height: 100%
  min-height: 60px

  &.small
    min-height: 18px

.spinner:before
  content: ''
  display: block
  position: absolute
  box-sizing: border-box
  top: 50%
  left: 50%
  height: 48px
  width: @height
  margin: (-(@height / 2))
  border-radius: @height
  animation: spinner 0.5s linear infinite
  border: 4px solid rgba(0, 0, 0, 0.2)
  border-top-color: $foreground

.small .spinner:before
  height: 18px
  width: @height
  border-radius: @height
  margin: (-(@height / 2))

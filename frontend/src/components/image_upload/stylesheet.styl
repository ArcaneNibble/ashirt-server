@import '~src/vars'

.root
  padding: 10px
  border-radius: 3px
  background: $darker-background
  box-shadow: 0 0 0 0 rgba(19,124,189,0), 0 0 0 0 rgba(19,124,189,0), 0 0 0 0 rgba(19,124,189,0), inset 0 0 0 1px rgba(16,22,26,.3), inset 0 1px 1px rgba(16,22,26,.4)
  focus-box-shadow()

.active
  background: $darker-primary

.disabled
  opacity: 0.5
  cursor: not-allowed
  box-shadow: none !important

.no-image
  margin: 10px
  text-align: center

  img
    display: block
    width: 50px
    margin: 10px auto

  span
    font-weight: 800
    text-decoration: underline
    cursor: pointer

.has-images
  padding: 10px

.thumb
  width: 100%
  height: 150px
  margin: 10px solid transparent
  border-radius: 3px
  box-shadow: 0 0 1px 0 #000
  background-size: cover
  background-position: center center

.error
  margin-top: 20px
  font-weight: 800
  color: $error

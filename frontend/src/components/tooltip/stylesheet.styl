$tooltip-background = #e1e8ed
$carret-size = 6px

.root
  position: absolute
  padding: 10px 12px
  border-radius: 3px
  background: $tooltip-background
  color: #394b59
  box-shadow: 0 0 0 1px rgba(16,22,26,.2), 0 2px 4px rgba(16,22,26,.4), 0 8px 24px rgba(16,22,26,.4)
  white-space: nowrap

  &:after
    content: ''
    position: absolute
    border: $carret-size solid transparent

// The positioner is absolutely positioned in the body and covers the children elements
// which allows positioning of the tooltip easily. Therefore pointer-events must be set
// to none to avoid covering the tooltiped element
.positioner
  position: absolute
  pointer-events: none
  transition: all 200ms ease

  &.animating
    opacity: 0
    transform: scale(0.4)

// The classes below position the .root element above/below/left/right respectively within the positioner element
.above, .below
  left: 50%
  transform: translate(-50%, 0)
  &:after
    left: 50%
    margin-left: -($carret-size)

.left, .right
  top: 50%
  transform: translate(0, -50%)
  &:after
    top: 50%
    margin-top: -($carret-size)

.above
  bottom: 100%
  &:after
    top: 100%
    border-top-color: $tooltip-background

.below
  top: 100%
  &:after
    bottom: 100%
    border-bottom-color: $tooltip-background

.right
  left: 100%
  &:after
    right: 100%
    border-right-color: $tooltip-background

.left
  right: 100%
  &:after
    left: 100%
    border-left-color: $tooltip-background

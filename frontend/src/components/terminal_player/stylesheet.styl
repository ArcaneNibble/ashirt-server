@import '../../vars'

$progressBarHeight=8px

.root
  width: 100%
  height: 100%
  // padding-bottom is here to reserve space for the control buttons. If this is updated, 
  // adjustTerminalScaling will need to be updated as well
  padding-bottom: 70px
  box-sizing: border-box

.progressbar-container
  position: relative
  border: 1px
  padding: 2px
  border-style: solid
  border-color: #ccc
  flex-grow: 1

.progressbar
  background-color: $lighter-primary
  padding-top: $progressBarHeight


.bookmark
  height: $progressBarHeight * 2
  position: absolute
  // note on ordering here: Since we are rotating the image, the translate also needs to be adjusted. 
  // We want it to be shifted half way over, so, before rotate, we translate -50%, after rotate, translate 50%
  transform: rotate(180deg) translate(50%, 0)

.timestamp
  width: 60px
  font-family: Arial, Helvetica, sans-serif
  font-size: 12px

.terminal
  width: max-content

.controls
  padding-top: 5px
  display: flex
  align-items: center
  & > *
    margin: 0 5px

.play-button
  width: 43px

.rate-menu
  width: 71px
